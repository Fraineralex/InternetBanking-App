@using InternetBanking.Core.Application.ViewModels.Payment;
@model SavePaymentViewModel  
@{
    ViewData["Title"] = "Confirm Payment";
}


<div class="col-6 offset-4 py-5 mb-5 pe-5 me-5">
    <div class="card bg-dark mt-5 mb-5" style="border-radius: 1rem;">
        <div class="card-body">
            <h1 class="text-center fw-bold text-warning">Warning</h1>
            <div class="col-6 warning-img mt-0 mx-auto">
                <img src="/images/warning.png" alt="profile"
                     class="ms-3">
            </div>
            <h4 class="fs-5 fw-bold px-2 mb-3 text-white text-center">
                Are you sure you want to make this payment?
            </h4>

            <div class="text-center mx-auto">
                <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-light me-2 m-auto ms-2 mt-3">Cancel</a>

                <form method="post" asp-controller="Payment" asp-action="ConfirmCreditCardPaymentPost" class="d-inline">
                    <input type="hidden" asp-for="OriginAccountNumber" />
                    <input type="hidden" asp-for="DestinationAccountNumber" />
                    <input type="hidden" asp-for="Amount" />

                    <button type="submit" class="btn btn-lg btn-primary mt-3">Yes</button>
                </form>
            </div>

        </div>
    </div>
</div>