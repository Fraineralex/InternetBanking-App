@using InternetBanking.Core.Application.ViewModels.Client;
@model PaymentsSaveViewModel
@{
    ViewData["Title"] = "Payment Express";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-6 offset-3">

            <div class="card">

               <div class="card-header bg-dark text-light">
                    <h4>Pay Express</h4>
                </div>


                <div class="card-body">



                    <form method="post" asp-controller="Payment" asp-action="PaymentExpress">

                        <div class="mb-3">
                            <label asp-for="TargetAccountNumber" class="form-label">Destination:</label>
                            <input asp-for="TargetAccountNumber" class="form-control" type="number" min="1" step="any" />
                            <span asp-validation-for="TargetAccountNumber" class="text-danger"></span>
                        </div>

                       

                        <<div class="mb-3">
                            <label asp-for="OriginAccountId" class="form-label">Saving Accounts:</label>
                            <select asp-for="OriginAccountId" asp-items="@(new SelectList(Model.UserAccountsNumbers, "Id", "AccountNumber"))" class="form-select">
                                <option value="0" selected>Select one Account</option>
                            </select>
                            <span asp-validation-for="OriginAccountId" class="text-danger"></span>

                        </div>


                        <div class="mb-3">
                            <label asp-for="Amount" class="form-label">Amount:</label>
                            <input asp-for="Amount" class="form-control" type="number" min="1" step="any" />
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>


                        <a asp-controller="Payment" asp-action="Index" class="btn btn-warning">Cancel</a>

                        <button type="submit" class="btn btn-primary">Pay</button>

                    </form>





                </div>

            </div>

        </div>

    </div>

</div>
