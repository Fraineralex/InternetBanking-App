<main>
    <section class="container">
        <div class="row mx-auto">

            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-bold mt-4 text-center text-primary"><i class='bx bxs-bank'></i> Restore Password</h1>
                <p class="fs-3 fw-bold text-dark mt-1 text-center">
                    Here you can restore your password inserting your email and the new password. <i class="text-white">🚀</i>

                </p>


                <div class="col-10 mx-auto card bg-dark text-white mt-5 mb-5" style="border-radius: 1rem;">
                    <div class="card-body">

                        <h2 class="fw-bold mb-3 text-uppercase text-center mt-2">Restoring your password</h2>
                        <p class="text-white-50 fs-5 mb-3 text-center">Please complete all the fields below!</p>
                        @Html.ValidationMessage("userVaidation", "",new{@class = "text-danger text-center fw-bold fs-5 mb-3"}, "h4")
                        @if (Model.HasError)
                        {
                            <h4 class="text-danger text-center fw-bold fs-5 mb-3">@Model.Error</h4>
                        }

                        <form asp-action="ResetPassword" asp-controller="User" method="POST">

                            <div class="p-3">
                                <label asp-for="Email" class="form-label text-white"><strong>Email <small class="text-danger"> *</small></strong></label>
                                <input type="text" class="form-control bg-dark text-white border-white form-control-lg" asp-for="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0 mb-3">
                                <label asp-for="Password" class="form-label text-white"><strong>Password <small class="text-danger"> *</small></strong></label>
                                <input type="password"
                                       class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="Password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="p-3 pt-0 mb-3">
                                <label asp-for="ConfirmPassword" class="form-label text-white"><strong>Confirm Password <small class="text-danger"> *</small></strong></label>
                                <input type="password"
                                       class="form-control bg-dark text-white border-white form-control-lg"
                                       asp-for="ConfirmPassword">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>

                            <input type="hidden" asp-for="Token"/>

                            <button class="btn btn-primary  btn-lg float-end" type="submit">
                                ✅ Done
                            </button>
                            <a class="btn btn-light  btn-lg float-end me-2" id="restore-password" asp-controller="User" asp-action="Index"><i class='bx bx-log-in'></i> Back</a>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </section>
</main>